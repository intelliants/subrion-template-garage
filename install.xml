    <config group="template_garage"
            type="divider"
            order="3300">Header / Teaser</config>
    <config group="template_garage"
            name="bg_header"
            type="image"
            description="Background image"
            order="3301"><![CDATA[]]></config>
    <config group="template_garage"
            name="bg_header_use_color"
            type="radio"
            values="1,0"
            description="Use color instead image"
            order="3302">0</config>
